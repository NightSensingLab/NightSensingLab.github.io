---
import BaseLayout from '~/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const people = await getCollection('people');
  return people.map((person) => ({
    params: { slug: person.slug },
    props: { person },
  }));
}

const { person } = Astro.props;

// 格式化论文引用，突出显示作者姓名和期刊
function formatPublication(pub: string, authorName: string | string[]) {
  let formatted = pub.trim();

  // ---- 1) 加粗作者名（可传单个或多个） ----
  const names = Array.isArray(authorName) ? authorName : [authorName];

  // 使用“前后为非字母/边界”的方式匹配作者名，并将紧随其后的 * 一并加粗
  // 如果你需要更广泛的 Unicode 字母匹配，可将 [A-Za-z] 替换为 \p{L} 并在正则上加 'u'
  for (const name of names) {
    const escaped = name.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    const authorRe = new RegExp(`(^|[^A-Za-z])(${escaped})(\\*?)(?=[^A-Za-z]|$)`, 'g');
    formatted = formatted.replace(authorRe, (_m, pre, nm, star) => {
      return `${pre}<strong>${nm}${star || ''}</strong>`;
    });
  }

  // ---- 2) 提取期刊名：倒数第二个 '.' 之后到“随即的第一个 ','”之间 ----
  // 去掉尾随空白，保留末尾句号（如果有），仅用于定位索引
  const s = formatted;

  // 找到最后一个 '.' 的位置
  const lastDot = s.lastIndexOf('.');
  if (lastDot === -1) return formatted; // 找不到句号就不处理期刊样式

  // 找到“倒数第二个 '.'”
  const secondLastDot = s.lastIndexOf('.', lastDot - 1);
  if (secondLastDot === -1) return formatted; // 不足两个句号，不处理

  // 期刊片段起点（跳过空格）
  let start = secondLastDot + 1;
  while (start < s.length && /\s/.test(s[start])) start++;

  // 从起点开始找第一个逗号
  const commaAfterStart = s.indexOf(',', start);
  if (commaAfterStart === -1) return formatted; // 起点后无逗号，不处理

  const journalRaw = s.slice(start, commaAfterStart).trim();
  if (!journalRaw) return formatted;

  // 仅替换该区间，避免误把标题中同名词条替换
  const before = s.slice(0, start);
  const after = s.slice(commaAfterStart); // 从逗号开始保留
  const journalStyled = `<span class="text-blue-600 dark:text-blue-400 font-bold italic">${journalRaw}</span>`;

  formatted = `${before}${journalStyled}${after}`;
  
  return formatted;
}


