---
import ThemeToggle from '~/components/ThemeToggle.astro';

const nav = [
  { href: '/', label: 'Home' },
  { href: '/publications', label: 'Publications' },
  { href: '/projects', label: 'Projects' },
  { href: '/people', label: 'People' },
  { href: '/data-products', label: 'Data Products' },
  { href: '/about', label: 'About' },
];
---
<header class="border-b border-neutral-200/50 bg-white/80 backdrop-blur-md supports-[backdrop-filter]:bg-white/60 sticky top-0 z-50 dark:border-neutral-800/50 dark:bg-neutral-950/80 dark:supports-[backdrop-filter]:bg-neutral-950/60">
  <div class="container-page flex h-16 items-center justify-between">
    <a href="/" class="text-xl font-bold tracking-wide gradient-text hover:scale-105 transition-transform duration-300">NightSensingLab</a>
    <nav class="hidden gap-8 text-sm md:flex">
      {nav.map((n) => (
        <a class="text-neutral-700 hover:text-brand-600 hover:scale-105 transition-all duration-300 font-medium dark:text-neutral-300 dark:hover:text-brand-400" href={n.href}>{n.label}</a>
      ))}
    </nav>
    <div class="flex items-center gap-4">
      <a class="text-neutral-700 hover:text-brand-600 hover:scale-105 transition-all duration-300 font-medium dark:text-neutral-300 dark:hover:text-brand-400" href="/news">News</a>
      <ThemeToggle />
    </div>
  </div>
</header>

